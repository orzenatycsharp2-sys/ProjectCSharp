<Window x:Class="Telhai.DotNet.PlayerProject.MusicPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Telhai.DotNet.PlayerProject"
        mc:Ignorable="d"
        Title="Classroom Music Player" Height="550" Width="900"
        Background="#222" Foreground="White" WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
            <Image x:Name="imgAlbumArt" Width="180" Height="180" Margin="0,0,0,10" Stretch="UniformToFill">
                <Image.Source>
                    <BitmapImage UriSource="https://via.placeholder.com/180?text=No+Cover" />
                </Image.Source>
            </Image>

            <TextBlock x:Name="txtStatus" Text="Ready" Foreground="#AAA" HorizontalAlignment="Center"/>

            <TextBlock x:Name="txtCurrentSong" Text="No Song Selected" FontSize="20" FontWeight="Bold" Margin="0,10,0,5" HorizontalAlignment="Center" TextWrapping="Wrap"/>

            <TextBlock x:Name="txtArtist" Text="" FontSize="16" Foreground="#007ACC" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtAlbum" Text="" FontSize="14" Foreground="#888" HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <TextBlock x:Name="txtFilePath" Text="" FontSize="10" Foreground="#555" HorizontalAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,15"/>

            <Slider x:Name="sliderProgress" IsMoveToPointEnabled="True" Margin="0,0,0,20"
                    PreviewMouseLeftButtonDown="SliderProgress_PreviewMouseLeftButtonDown"
                    PreviewMouseLeftButtonUp="SliderProgress_PreviewMouseLeftButtonUp"
                    ValueChanged="SliderProgress_ValueChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="PLAY" Click="BtnPlay_Click" Width="80" Height="40" Margin="5" FontWeight="Bold" Background="#007ACC" Foreground="White"/>
                <Button Content="PAUSE" Click="BtnPause_Click" Width="80" Height="40" Margin="5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Volume " VerticalAlignment="Center"/>
                <Slider x:Name="sliderVolume" Minimum="0" Maximum="1" Value="0.5" Width="150" ValueChanged="SliderVolume_ValueChanged"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Library" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListBox x:Name="lstLibrary" 
             Grid.Row="1" 
             Background="#333" 
             Foreground="White" 
             SelectionChanged="LstLibrary_SelectionChanged"
             MouseDoubleClick="LstLibrary_MouseDoubleClick"
             DisplayMemberPath="Title"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add MP3" Click="BtnAdd_Click" Margin="5"/>
                <Button Content="Remove" Click="BtnRemove_Click" Margin="5"/>
                <Button Name="BtnSettings" Content="Settings" Click="BtnSettings_Click" Margin="5"/>
                <Button Name="BtnEdit" Content="Edit Song" Click="BtnEdit_Click" Margin="5" Padding="10,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>