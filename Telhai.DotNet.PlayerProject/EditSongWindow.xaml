<Window x:Class="Telhai.DotNet.PlayerProject.EditSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Song" Height="400" Width="400" Background="#222" Foreground="White">
	<StackPanel Margin="20">
		<TextBlock Text="Edit Song Name:" Margin="0,0,0,5"/>
		<TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>

		<TextBlock Text="Manage Images:" Margin="0,0,0,5"/>
		<ListBox ItemsSource="{Binding Images}" Height="150" Background="#333" x:Name="lstImages">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<Image Source="{Binding}" Width="30" Height="30" Margin="5"/>
						<TextBlock Text="{Binding}" VerticalAlignment="Center" Width="200" TextTrimming="CharacterEllipsis"/>
						<Button Content="X" Command="{Binding DataContext.RemoveImageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}" Margin="5"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>

		<Button Content="Add Image" Command="{Binding AddImageCommand}" Margin="0,10,0,10"/>
		<Button Content="Save &amp; Close" Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Background="#007ACC"/>
	</StackPanel>
</Window>